<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="tokenbase_customer_wrapper">
            <block class="Magento\Framework\View\Element\Template" name="tokenbase_manage_authnetcim_ach" template="ParadoxLabs_TokenBase::customer/method.phtml" cacheable="false">
                <block class="ParadoxLabs\TokenBase\Block\Customer\Cards" name="tokenbase_manage_authnetcim_ach_cards" as="tokenbase_customer_method_left" template="ParadoxLabs_TokenBase::customer/cards.phtml" />
                <block class="ParadoxLabs\Authnetcim\Block\Customer\Form\Ach" name="tokenbase_manage_authnetcim_ach_form" as="tokenbase_customer_method_right">
                    <arguments>
                        <argument name="default_title" xsi:type="string">Add a Bank Account</argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
